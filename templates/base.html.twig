<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}

            <link rel="stylesheet" href="{{ asset('/styles/landing_page.css') }}">
            <link rel="stylesheet" href="{{ asset('/styles/partials/navbar.css') }}">
            <link rel="stylesheet" href="{{ asset('/styles/utils.css') }}">
        {% endblock %}

        {% block additional_stylesheets %} {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% block background %}
                {% include '/partials/background.html.twig' %}
            {% endblock %}

            {% block header %}
                {% include '/partials/header.html.twig' %}
            {% endblock %}

            {% block content %}{% endblock %}

            {% block footer %}
                {% include 'partials/footer.html.twig' %}
            {% endblock %}
        {% endblock %}

        {% block additional_javascripts %}{% endblock %}
    </body>
</html>